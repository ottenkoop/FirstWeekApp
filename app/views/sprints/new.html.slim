#sprints_new
  .row-fluid
    .span12
        .sprintname
          .container
            h1 New sprint

        .sprintForm
          .container
            = link_to("Â« Back to sprints", sprints_path, class: "btn btn-default")

            = form_for(@sprint) do |f|
              fieldset
                p
                  = f.label :name, "Sprint name:"
                  = f.text_field(:name, class: "form-control", placeholder: "Sprint name")
                p
                  = f.label :goal, "Sprint goal:"
                  = f.text_field(:goal, class: "form-control", placeholder: "Sprint goal")
                p
                  = f.label :start_date, "Sprint start date:"
                  = f.date_select(:start_date, order: [:day,:month,:year], with_css_classes: true )
                p
                  = f.label :end_date, "Sprint end date:"
                  = f.date_select(:end_date, order: [:day,:month,:year], with_css_classes: true )

                  = f.hidden_field :user_id, value: session[:user_id]

                p
                  = f.submit("Create Sprint", class: "btn btn-primary")